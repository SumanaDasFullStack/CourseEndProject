package com.controller;


import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.MediaType;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.entity.Distance;
import com.entity.Location;
import com.service.DistanceService;
import com.service.LocationService;

@RestController
@RequestMapping("distance")
public class DistanceController {
	
	@Autowired
	DistanceService distanceService;
	@Autowired
	LocationService locationService;
	
	//http://localhost:9191/distance/distances
	@PostMapping(value = "distances",consumes = MediaType.APPLICATION_JSON_VALUE)
    public Distance createDistance(@RequestBody Distance distance) {
        return distanceService.saveDistance(distance);
    }
	/*
	 * @GetMapping(value = "/from/{id}",consumes = MediaType.APPLICATION_JSON_VALUE)
	 * public List<Distance> getDistancesFromLocation(@PathVariable int id) {
	 * Location location = locationService.getallLocation().stream() .filter(loc ->
	 * loc.getId()==id) .findFirst() .orElse(null); return
	 * distanceService.getDistancesFromLocation(location); }
	 */
	
	//http://localhost:9191/distance/from/1/2
	/*
	 * @GetMapping(value = "/from/{fromLocation}/{toLocation}",consumes =
	 * MediaType.APPLICATION_JSON_VALUE) public List<Distance>
	 * getDistancesFrom(@PathVariable("fromLocation") Long
	 * source_id, @RequestParam("toLocation") int dest_id) { Location location =
	 * locationService.getallLocation().stream() .filter(loc ->
	 * (loc.getId()==source_id)) .findFirst() .orElse(null); return
	 * distanceService.getDistancesFromLocation(location); }
	 */
		////http://localhost:9191/distance/from/1
		 @GetMapping("/distances/from/{locationId}")
		    public List<Distance> getDistancesFromLocation(@PathVariable Long locationId) {
		        Location location = locationService.getallLocation().stream()
		                .filter(loc -> loc.getId().equals(locationId))
		                .findFirst()
		                .orElse(null);
		        return distanceService.getDistancesFromLocation(location);
		    }
	
	 
		

}
