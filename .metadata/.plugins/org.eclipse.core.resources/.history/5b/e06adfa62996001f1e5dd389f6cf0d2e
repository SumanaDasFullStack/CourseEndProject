    <h2>Check Fare</h2>
    <form id="fareForm" th:action="@{/cab/findallcab}" method="get">
        <div class="form-group">
            <label for="cabTypeFare">Cab Type:</label>
            <select class="form-control" id="cabTypeFare" name="cabType" required>
                <option value="sedan">Sedan</option>
                <option value="suv">SUV</option>
            </select>
        </div>
        <button type="submit" class="btn btn-secondary">Get Fare</button>
    </form>

    <div id="fareResult" class="mt-3"></div>
</div>

<script>
    document.getElementById('fareForm').onsubmit = function (event) {
        event.preventDefault();
        const cabType = document.getElementById('cabTypeFare').value;

        fetch('http://localhost:9191/cab/findallcab')
            .then(response => response.text())
            .then(data => {
                document.getElementById('fareResult').innerHTML = '<h4>Fare: $${data}</h4>';
            })
            .catch(error => {
                console.error('Error fetching fare:', error);
                document.getElementById('fareResult').innerHTML = '<h4>Error fetching fare</h4>';
            });
    };
</script>

