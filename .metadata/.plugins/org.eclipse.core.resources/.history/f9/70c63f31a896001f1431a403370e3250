    <h1>Cab Booking</h1>
    
    <form id="bookingForm" th:action="@{/location/add_location}" method="post">
        <div class="form-group">
            <label for="loc_name">Passenger Name:</label>
            <input type="text" class="form-control" id="loc_name" name="loc_name" required>
        </div>
        <!-- <div class="form-group">
